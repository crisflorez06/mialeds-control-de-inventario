# ====================================================================
# APLICACION
# ====================================================================
# Puerto del servidor
server.port=8080

# ====================================================================
# CONFIGURACION DE LA BASE DE DATOS (MySQL)
# ====================================================================
# URL de conexión a tu base de datos. Reemplaza 'mialeds_db' con el nombre de tu base de datos.
spring.datasource.url=jdbc:mysql://localhost:3306/mialeds_db?createDatabaseIfNotExist=true
# Usuario de la base de datos
spring.datasource.username=root
# Contraseña de la base de datos
spring.datasource.password=your-db-password

# ====================================================================
# CONFIGURACION DE JPA/HIBERNATE
# ====================================================================
# Dialecto de Hibernate para MySQL 8
spring.jpa.database-platform=org.hibernate.dialect.MySQLDialect
# DDL Auto: 'update' actualiza el esquema, 'validate' lo valida, 'create' lo crea de nuevo.
spring.jpa.hibernate.ddl-auto=update
# Muestra las sentencias SQL en la consola (útil para depuración)
spring.jpa.show-sql=true

# ====================================================================
# CONFIGURACION DEL SERVIDOR DE CORREO (GMAIL)
# ====================================================================
# Host del servidor de correo
spring.mail.host=smtp.gmail.com
# Puerto del servidor de correo
spring.mail.port=587
# Tu dirección de correo de Gmail
spring.mail.username=your-email@gmail.com
# Contraseña de aplicación generada por Google (NO uses tu contraseña normal)
spring.mail.password=your-google-app-password

# Propiedades adicionales de JavaMail
spring.mail.properties.mail.transport.protocol=smtp
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true
